<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="ErrorOr" />
        <PackageReference Include="Asp.Versioning.Http" />
        <PackageReference Include="Grpc.AspNetCore" />
    </ItemGroup>
    
    <ItemGroup>
        <ProjectReference Include="..\Shared\ServiceDefaults\ServiceDefaults.csproj" />
        <ProjectReference Include="..\Sail.Compass\Sail.Compass.csproj" />
        <ProjectReference Include="..\Sail.Database.MongoDB\Sail.Database.MongoDB.csproj" />
        <ProjectReference Include="..\Sail.Storage.MongoDB\Sail.Database.MongoDB.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Protobuf Include="$(RepoRoot)\src\Shared\Protos\*.proto" Link="Protos\%(RecursiveDir)%(Filename)%(Extension)">
            <ProtoRoot>$(RepoRoot)\src\Shared\Protos</ProtoRoot>
        </Protobuf>
    </ItemGroup>
</Project>

